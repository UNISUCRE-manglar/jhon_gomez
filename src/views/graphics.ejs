<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <script src="https://cdn.anychart.com/releases/8.11.0/js/anychart-core.min.js"></script>
  <script src="https://cdn.anychart.com/releases/8.11.0/js/anychart-pie.min.js"></script>
  <script src="https://cdn.anychart.com/releases/8.11.0/js/anychart-cartesian.min.js"></script>
  <%- include("partials/head") %>
  <style>
    body, html {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    
    #grafica, #grafica2 {
      width: 80%;
      height: 80%;
      margin: auto;
      background-color: white;
      margin-bottom: 60px ;
    }
    
    #subtitulo {
      text-align: center;
      font-size: 16px;
      color: black;
      background-color: rgb(228, 217, 217)f;
      padding: 10px;
    }
  </style>
</head>
<body>
  <!-- HEADER -->
  <%- include("partials/navigation") %>
  <!-- My Content -->
  <div id="grafica"></div>
  <div id="subtitulo">INGRESO MENSUALES</div>
  <div id="grafica2"></div>
  

  <script>
    var data = [
      {x: "NOMINA", value: 300},
      {x: "LOGISTICA", value: 200},
      {x: "INVERSION", value: 100},
      {x: "ALQUILER", value: 50},
    ];

    // create a pie chart and set the data
    var chart = anychart.pie(data);

    /* set the inner radius
    (to turn the pie chart into a doughnut chart)*/
    chart.innerRadius("50%");

    // set the container id
    chart.container("grafica");

    // initiate drawing the chart
    chart.draw();

    var label = anychart.standalones.label();
    label.text("GASTOS DEL ULTIMO MES");
    label.width("100%");
    label.height("100%");
    label.fontColor("#60727b");
    label.hAlign("center");
    label.vAlign("middle");

    // set the label as the center content
    chart.center().content(label);

    var data2 = [
      ["January", 10000],
      ["February", 12000],
      ["March", 18000],
      ["April", 11000],
      ["May", 9000]
    ];
    
    // create a chart
    var chart2 = anychart.line();

    // create a line series and set the data
    var series2 = chart2.line(data2);

    // set the container id
    chart2.container("grafica2");

    // initiate drawing the chart
    chart2.draw();
  </script>
</body>
</html>
